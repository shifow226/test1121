<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts-config PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
  "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
        <form-bean name="registerForm" type="sample.form.RegisterForm" />

        <form-bean name="listForm" type="sample.form.ListForm" />

        <form-bean name="updateViewForm" type="sample.form.UpdateViewForm" />

		<form-bean name="updateForm" type="sample.form.UpdateForm">
			 <form-property name="name" type="java.lang.String" initial="" />
			 <form-property name="email" type="java.lang.String" initial="" />
			 <form-property name="remarks" type="java.lang.String" initial="" />
		</form-bean>

        <form-bean name="deleteForm" type="sample.form.DeleteForm" />
    </form-beans>

    <action-mappings>
        <action path="/create" name="registerForm" type="sample.action.userCreateAction" />

		<action path="/list" name="listForm" type="sample.action.userListAction" />

		<action path="/update" name="updateForm" type="sample.action.userUpdateAction" />

		<action path="/updateview" name="updateViewForm" type="sample.action.userUpdateViewAction" />

		<action path="/delete" name="deleteForm" type="sample.action.userDeleteAction" />

		<action path="/complete" name="deleteForm" type="sample.action.userDeleteAction" />
    </action-mappings>

</struts-config>